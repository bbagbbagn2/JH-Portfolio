{
    "compilerOptions": {
      "allowJs": true,
      "target": "ES5",
      "esModuleInterop": true,
      "moduleResolution": "node",
      "noImplicitAny": true,
      "allowImportingTsExtensions": true,
      "strictNullChecks": true,
      "lib": ["ES2015", "DOM", "DOM.Iterable"],
      "jsx": "react" 
    },
    "include": ["src", "tsconfig.json"],
    "exclude": ["node_modules"],
}